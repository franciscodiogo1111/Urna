@model Urna.Model.DtoVoto

@{
    ViewData["Title"] = "Votacao";
}

<div class="row justify-content-md-center">
    <div class="col-md-8">
        <div class="alert" id="alert" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="card">
            <div class="card-header text-center text-monospace">
                <h4 class="mb-0">Realizar voto</h4>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <input id="box1" tabindex="1" class="form-control votacao" type="number" min="0" max="1" />
                    <input id="box2" tabindex="2" class="form-control votacao" type="number" min="0" max="1" />
                </div>
                <div id="contentCandidato" class="row mt-4 justify-content-md-center">
                    <div class="col-md-2">
                        <img src="http://www.agvelveiculos.com.br/templates/site/images/extras/200x200.gif" width="100" height="100" />
                    </div>
                    <div class="col-md-5">
                        <h5 id="nomeCandidato"></h5>
                        <p id="legendaCandidato"></p>
                    </div>
                </div>
                <div class="row mt-4 justify-content-md-center">
                    <div class="col-md-2">
                        <button id="branco" type="button" class="btn btn-secondary text-monospace">BRANCO</button>
                    </div>
                    <div class="col-md-2">
                        <button id="corrige" type="button" class="btn btn-danger text-monospace">LIMPAR</button>
                    </div>
                    <div class="col-md-2">
                        <button id="confirma" type="button" class="btn btn-success text-monospace">CONFIRMA</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
